<Window x:Class="tddd49_holdem_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tddd49_holdem_gui"
        mc:Ignorable="d"
        Title="TDDD49 Hold'em" Height="650"  Width="850">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/images/floor.jpg"/>
        </StackPanel.Background>
        <WrapPanel HorizontalAlignment="Center" Margin="10">
            <!-- Player 1 -->
            <local:PlayerPanel x:Name="PlayerSlot1" d:DataContext="{d:DesignData Source=/SampleData/PlayerSample.xaml}"/>
        </WrapPanel>
        <StackPanel Orientation="Horizontal" Height="300" HorizontalAlignment="Center">
            <WrapPanel Width="100" VerticalAlignment="Center">
                <!-- Player 2 -->
                <local:PlayerPanel x:Name="PlayerSlot2" d:DataContext="{d:DesignData Source=/SampleData/PlayerSample.xaml}"/>
            </WrapPanel>
            <StackPanel Width="600">
                <StackPanel.Background>
                    <ImageBrush ImageSource="/images/poker-table.png"/>
                </StackPanel.Background>
                <!-- the actual table -->
            </StackPanel>
            <WrapPanel Width="100" VerticalAlignment="Center">
                <!-- Player 3 -->
                <local:PlayerPanel x:Name="PlayerSlot3" d:DataContext="{d:DesignData Source=/SampleData/PlayerSample.xaml}"/>
            </WrapPanel>
        </StackPanel>
        <WrapPanel Width="100">
            <!-- Player 4 -->
            <local:PlayerPanel x:Name="PlayerSlot4" d:DataContext="{d:DesignData Source=/SampleData/PlayerSample.xaml}"/>
        </WrapPanel>

        <!-- Action bar -->
        <StackPanel Orientation="Horizontal" Height="100" Background="WhiteSmoke">
            <StackPanel  Width="480">
                <TextBlock Foreground="Black" FontSize="16" Padding="10">
                     Waiting for player 1...<LineBreak />
                     Player 1 rasies.<LineBreak />
                     Waiting for player 2...
                </TextBlock>
            </StackPanel>
            <WrapPanel VerticalAlignment="Center" Width="300">
                <Button Name="FoldButton" Width="150" VerticalAlignment="Stretch" FontSize="20">Fold</Button>
                <Button Name="CheckButton" Width="150" VerticalAlignment="Stretch"  FontSize="20">Check</Button>
                <Button Name="CallButton" Width="150" VerticalAlignment="Stretch"  FontSize="20">Call</Button>
                <Button Name="RaiseButton" Width="150" VerticalAlignment="Stretch"   FontSize="20">Raise</Button>
            </WrapPanel>
        </StackPanel>
    </StackPanel>
</Window>
