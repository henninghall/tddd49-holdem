<Window x:Class="tddd49_holdem_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tddd49_holdem_gui"
        mc:Ignorable="d"
        Title="TDDD49 Hold'em" Height="470" Width="700">
    <StackPanel>

        <DockPanel >
            <TextBlock Name="Slot4" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Top" Height="50" Text="{Binding Name}" FontSize="14" Background="Beige"
                       d:DataContext="{d:DesignData Player}" />
            <TextBlock Name="Slot2" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Left" Height="50" Text="{Binding Name}" FontSize="14" Background="Beige"
                       d:DataContext="{d:DesignData Player }" />
            <TextBlock Name="Slot3" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Right" Height="50"  Text="{Binding Name}" FontSize="14" Background="Beige" />
            <TextBlock Name="Slot1" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Bottom" Height="50" Text="{Binding Name}" FontSize="14" Background="Beige" />
            <Image Source="images/poker-table.png" />
        </DockPanel>
        <TextBlock Name="ActionBar" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Bottom" Height="50" Text="{Binding Pot}" FontSize="16" Background="Aquamarine" />

    </StackPanel>
</Window>
