<Window x:Class="tddd49_holdem_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tddd49_holdem_gui"
        xmlns:console="clr-namespace:tddd49_holdem;assembly=tddd49-holdem"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TDDD49 Hold'em" Height="650"  Width="800">



    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/images/floor.jpg"/>
        </StackPanel.Background>
        <WrapPanel Name="PlayerPanel1" HorizontalAlignment="Center" Margin="10">
            <!-- Player1 -->
            <Border CornerRadius="6" BorderBrush="Gray" BorderThickness="2" >
                <StackPanel Height="100" Width="100" Background="GhostWhite" Name="Slot1" d:DataContext="{d:DesignData Source=/SampleData/PlayerSample.xaml}" >
                    <TextBlock Text="{Binding Name}"  HorizontalAlignment="Center" FontSize="16"/>
                    <TextBlock FontSize="16" HorizontalAlignment="Center"><Run Text="$"/><Run Text="{Binding ChipsOnHand}"/></TextBlock>
                    <ListBox ItemsSource="{Binding Cards}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" BorderBrush="Gray" BorderThickness="2" >
                                    <StackPanel Width="42">
                                        <TextBlock Text="{Binding SuitSymbol}" FontSize="19"  HorizontalAlignment="Center" Foreground="{Binding Color}" />
                                        <TextBlock Text="{Binding ValueSymbol}" FontSize="19"  HorizontalAlignment="Center" Foreground="{Binding Color}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ListBox>
                </StackPanel>
            </Border>
        </WrapPanel>
        <StackPanel Orientation="Horizontal" Height="300">
            <WrapPanel Name="PlayerPanel2" Width="100">
                <!-- insert players here -->
            </WrapPanel>
            <StackPanel Width="600">
                <StackPanel.Background>
                    <ImageBrush ImageSource="/images/poker-table.png"/>
                </StackPanel.Background>
                <!-- the actual table -->
            </StackPanel>
            <WrapPanel Name="PlayerPanel3" Width="100">
                <!-- insert players here -->
            </WrapPanel>
        </StackPanel>
        <WrapPanel Name="PlayerPanel4" Height="100">
            <!-- insert players here -->
        </WrapPanel>

        <!-- Action bar -->
        <StackPanel Orientation="Horizontal" Height="100" Background="WhiteSmoke">
            <StackPanel  Width="480">
                <TextBlock Foreground="Black" FontSize="16" Padding="10">
                     Waiting for player 1...<LineBreak />
                     Player 1 rasies.<LineBreak />
                     Waiting for player 2...
                </TextBlock>
            </StackPanel>
            <WrapPanel VerticalAlignment="Center" Width="300">
                <Button Name="FoldButton" Width="150" VerticalAlignment="Stretch" FontSize="20">Fold</Button>
                <Button Name="CheckButton" Width="150" VerticalAlignment="Stretch"  FontSize="20">Check</Button>
                <Button Name="CallButton" Width="150" VerticalAlignment="Stretch"  FontSize="20">Call</Button>
                <Button Name="RaiseButton" Width="150" VerticalAlignment="Stretch"   FontSize="20">Raise</Button>
            </WrapPanel>
        </StackPanel>
    </StackPanel>
</Window>
